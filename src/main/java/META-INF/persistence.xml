<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sysmarket" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>jdbc/__sysmarket</non-jta-data-source>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Categoria</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Cliente</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Endereco</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Estado</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Fornecedor</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.ItemProduto</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Pedido</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Produto</class>
		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Usuario</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="daca-jaas" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>br.edu.ifpb.mt.dac.sysmarket.entities.Usuario</class>

		<properties>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/sysmarket" />
			<property name="hibernate.connection.dialect" value="org.hibernate.dialect.PostgreSQL9" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="admin" />
			<property name="hibernate.connection.password" value="admin" />
			<property name="hibernate.default_schema" value="public" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>
